{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Angular App",
      "type": "shell",
      "command": "ng build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Capacitor Sync Android",
      "type": "shell",
      "command": "npx cap sync android",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "dependsOn": ["Build Angular App"],
      "group": "build"
    },
    {
      "label": "Capacitor Open Android Studio",
      "type": "shell",
      "command": "npx cap open android",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "dependsOn": ["Capacitor Sync Android"]
    },
    {
      "label": "Build Android App (All)",
      "dependsOn": [
        "Build Angular App",
        "Capacitor Sync Android",
        "Capacitor Open Android Studio"
      ],
      "dependsOrder": "sequence"
    }
  ]
}
